    div.modal#Person_modal(role="dialog")
        div.modal-dialog.modal-lg(role="document")
            div.modal-content
                div.modal-header
                   h5.name='Человек'
                   button.modal_close_window(type="button", data-dismiss="modal", aria-label="Close")
                       span(aria-hidden="true")&times;
                div.modal-body
                    .card-body.condition(style="padding: 0px")
                        .input-group.mb-2
                            .input-group-prepend
                                span.input-group-text='Фамилия'
                            input.person_family(type="text", size="25")
                        .input-group.mb-2
                            .input-group-prepend
                                span.input-group-text='Имя'
                            input.person_name(type="text", size="25")
                        .input-group.mb-2
                            .input-group-prepend
                                span.input-group-text='Отчество'
                            input.person_midlename(type="text", size="25")
                        .input-group.mb-2
                            .input-group-prepend
                                span.input-group-text='Пол'
                            select#person_gender
                                option(value="M")="муж"
                                option(value="F")="жен"
                    p
                    button.btn-ttronix1#person_ok_window(type="button", data-dismiss="modal", aria-label='code', title="OK")
                        span=" OK "

